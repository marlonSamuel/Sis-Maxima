@model Model.tbl_estacion
@{
    ViewBag.Title = "Index";
    List<Model.tbl_estacion> estaciones = new Model.tbl_estacion().Listar();
}

<div id="estaciones">
    <h1 class="panel-default text-center">Estaciones Maxima</h1>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                @foreach (var c in estaciones)
                 {
                  <div class="login-panel panel panel-info">
                      <div class="panel-body">
                          @c.nombre_estacion
                          <a class="btn btn-primary pull-right" href="~/admin/adminestacion/index?id_estacion=@c.id_estacion">Ir A</a>
                      </div>
                  </div>
                 }
            </div>
        </div>
    </div>
</div>

